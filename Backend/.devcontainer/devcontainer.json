// ----------------------------------------------------------------
// BackEnd System Integrated Development Environment for PHP
// Version: 0.9.2
// ----------------------------------------------------------------
{
    "name": "Laravel",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/var/www/app",
    "customizations": {
        "vscode": {
            "settings": {
                "php.format.codeStyle": "Laravel"
            },
            "extensions": [
                "DEVSENSE.composer-php-vscode",
                "DEVSENSE.phptools-vscode",
                "EditorConfig.EditorConfig",
                "mikestead.dotenv",
                "onecentlin.laravel-blade",
                "onecentlin.laravel5-snippets",
                "xdebug.php-debug"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "sudo chown vscode:vscode -R /var/www/app/storage && composer install -d /var/www/app && cd /var/www/app && php artisan migrate && php artisan db:seed"
}
